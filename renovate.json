{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "timezone": "UTC",
  "schedule": ["after 2am and before 6am every weekday"],
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "description": "Automatically merge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group Python dependencies",
      "matchManagers": ["pip_requirements", "pip_setup", "pipenv", "poetry"],
      "groupName": "python dependencies"
    },
    {
      "description": "Group Docker base image updates",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["python", "node", "alpine", "ubuntu"],
      "groupName": "docker base images"
    },
    {
      "description": "Security updates",
      "matchDatasources": ["pypi"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "prPriority": 10,
      "labels": ["security"]
    },
    {
      "description": "Pin Docker digests",
      "matchDatasources": ["docker"],
      "pinDigests": true
    }
  ],
  "python": {
    "packageRules": [
      {
        "matchPackageNames": ["black", "isort", "flake8", "mypy", "pytest"],
        "groupName": "python linters and test tools"
      }
    ]
  },
  "docker": {
    "packageRules": [
      {
        "matchPackageNames": ["postgres"],
        "allowedVersions": "15.x"
      },
      {
        "matchPackageNames": ["redis"],
        "allowedVersions": "7.x"
      }
    ]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"]
  },
  "prConcurrentLimit": 10,
  "prCreation": "immediate",
  "rangeStrategy": "pin"
}