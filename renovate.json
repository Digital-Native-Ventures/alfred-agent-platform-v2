{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommitTypeAll(chore)",
    "group:allNonMajor",
    ":automergePatch"
  ],
  "python": {
    "enabled": true
  },
  "pip_requirements": {
    "fileMatch": ["(^|/)requirements.*\\.txt$"]
  },
  "dockerfile": {
    "enabled": true
  },
  "docker-compose": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "packageRules": [
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Automerge minor updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group Python test dependencies",
      "matchPackagePatterns": ["pytest", "coverage", "black", "flake8", "mypy"],
      "groupName": "python test tools"
    },
    {
      "description": "Group Docker base images",
      "matchPackagePatterns": ["^python:", "^node:", "^postgres:", "^redis:"],
      "groupName": "docker base images"
    },
    {
      "description": "Security updates should be merged quickly",
      "matchDatasources": ["pypi"],
      "matchPackagePatterns": ["^urllib3", "^requests", "^cryptography"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Pin Docker digests",
      "matchDatasources": ["docker"],
      "pinDigests": true
    },
    {
      "description": "Disable updates for archived dependencies",
      "matchPackagePatterns": ["^nose$", "^py$"],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "schedule": ["after 2am and before 5am on monday"],
  "timezone": "UTC",
  "labels": ["dependencies", "renovate"],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 3am on monday"]
  },
  "postUpdateOptions": ["gomodTidy", "npmDedupe", "yarnDedupeHighest"]
}