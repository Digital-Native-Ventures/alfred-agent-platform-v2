{
  "dashboard": {
    "id": null,
    "uid": "alert-grouping-v1",
    "title": "Alert Grouping Metrics",
    "description": "Monitor alert grouping performance and effectiveness",
    "tags": ["alerts", "grouping", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "Grouping Latency P95",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(alert_grouping_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency",
            "show": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.15],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "model": {
                  "expr": "histogram_quantile(0.95, rate(alert_grouping_duration_seconds_bucket[5m]))",
                  "refId": "A"
                },
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "High Grouping Latency",
          "message": "Alert grouping P95 latency exceeds 150ms"
        }
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "stat",
        "title": "Noise Reduction",
        "targets": [
          {
            "expr": "(1 - (sum(rate(alert_groups_total[5m])) / sum(rate(alerts_total[5m])))) * 100",
            "legendFormat": "Reduction %",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "text": {},
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 30 },
                { "color": "green", "value": 50 }
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "type": "table",
        "title": "Group Statistics",
        "targets": [
          {
            "expr": "topk(10, alert_group_size)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "Value": "Alert Count",
                "group_key": "Group Key"
              }
            }
          }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "type": "graph",
        "title": "Manual Merge/Unmerge Operations",
        "targets": [
          {
            "expr": "rate(alert_group_manual_merges_total[5m])",
            "legendFormat": "Merges",
            "refId": "A"
          },
          {
            "expr": "rate(alert_group_manual_unmerges_total[5m])",
            "legendFormat": "Unmerges",
            "refId": "B"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}