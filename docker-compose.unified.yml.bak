      - ./empty-credentials.json:/tmp/empty-credentials.json
    healthcheck:
      test: ["CMD-SHELL", "wget -q -O - http://localhost:9003/health > /dev/null || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 20s
    depends_on:
      db-postgres:
        condition: service_healthy
      pubsub-emulator:
        condition: service_started
      redis:
        condition: service_started
      agent-rag:
        condition: service_started
      model-router:
        condition: service_started
    restart: unless-stopped
    networks:
      - alfred_network
