FROM node:18-alpine

WORKDIR /app

# Copy package dependencies
COPY package.json ./
COPY package-lock.json* ./

# Install dependencies
RUN npm install

# Copy server files
COPY server.js ./
COPY standalone.js ./
COPY health.js ./
COPY integrate-with-social-intel.js ./
COPY .env.docker ./.env
COPY tests ./tests
COPY public ./public

# Expose ports
EXPOSE 3007
EXPOSE 9091

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3007

# Health check
HEALTHCHECK --interval=30s --timeout=20s --start-period=45s --retries=5 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3007/health || exit 1

# Start the application
CMD ["node", "standalone.js"]
