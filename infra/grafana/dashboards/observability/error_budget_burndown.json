{
  "dashboard": {
    "id": null,
    "uid": "obs-v2-error-budget",
    "title": "Observability v2 - Error Budget",
    "tags": ["observability", "slo", "reliability"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(up, env)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": false,
          "refresh": 1,
          "sort": 1
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{env=\"$environment\"}, job)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true,
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Error Budget Burn-Down",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 18,
          "h": 8
        },
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "targets": [
          {
            "expr": "1 - (sum(rate(http_requests_total{status!~\"2..\",env=\"$environment\",job=~\"$service\"}[1m])) / sum(rate(http_requests_total{env=\"$environment\",job=~\"$service\"}[1m])))",
            "legendFormat": "Budget Remaining",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{status!~\"2..\",env=\"$environment\",job=~\"$service\"}[1m])) / sum(rate(http_requests_total{env=\"$environment\",job=~\"$service\"}[1m]))",
            "legendFormat": "Error Rate",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "never",
              "stacking": {
                "mode": "normal",
                "group": "A"
              }
            },
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.95
                },
                {
                  "color": "green",
                  "value": 0.99
                }
              ]
            },
            "links": [
              {
                "title": "View error logs",
                "url": "/explore?left={\"datasource\":\"loki\",\"queries\":[{\"expr\":\"{app=\\\"$service\\\",env=\\\"$environment\\\",level=\\\"error\\\"}\"}],\"range\":{\"from\":\"$__from\",\"to\":\"$__to\"}}"
              }
            ]
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Budget Remaining"
              },
              "properties": [
                {
                  "id": "custom.fillOpacity",
                  "value": 50
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "thresholds"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Error Rate"
              },
              "properties": [
                {
                  "id": "custom.lineStyle",
                  "value": {
                    "dash": [10, 10]
                  }
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "red"
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 2,
        "title": "7-Day Burn Rate",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{status!~\"2..\",env=\"$environment\",job=~\"$service\"}[7d])) / sum(rate(http_requests_total{env=\"$environment\",job=~\"$service\"}[7d]))) / 0.01",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            },
            "mappings": [
              {
                "type": "range",
                "options": {
                  "from": null,
                  "to": 1,
                  "result": {
                    "text": "Normal"
                  }
                }
              }
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "text": {
            "titleSize": 16,
            "valueSize": 24
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "pluginVersion": "9.0.0"
      },
      {
        "id": 3,
        "title": "Budget Remaining",
        "type": "gauge",
        "gridPos": {
          "x": 18,
          "y": 4,
          "w": 6,
          "h": 4
        },
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "targets": [
          {
            "expr": "1 - (sum(rate(http_requests_total{status!~\"2..\",env=\"$environment\",job=~\"$service\"}[30d])) / sum(rate(http_requests_total{env=\"$environment\",job=~\"$service\"}[30d])))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "green",
                  "value": 0.7
                }
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "showThresholdLabels": true,
          "showThresholdMarkers": true,
          "text": {
            "titleSize": 14,
            "valueSize": 20
          }
        }
      }
    ]
  }
}